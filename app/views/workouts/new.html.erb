

<h2> Add a daily workout</h2>

<%= simple_form_for(@workout) do |f| %>
 <%= f.error_notification %>
  <%= f.input :workout_name, label: 'Workout Name/Title:' %>
  <%= f.input :date, label: 'Pick Date:', :as => :string, input_html: { class: 'datepicker' } %>
  <%= f.input :whats_done, as: :text, :input_html => { :cols => 5, :rows => 7 }, label: 'What did you do:' %>
  <%= f.input :notes, as: :text, :input_html => { :cols => 5, :rows => 5 } ,label: 'Notes:' %>
 
  <%= f.button :submit %>
<% end %>
<%= link_to "Back", workouts_path %>